<ul>
{{#each listings as |listing|}}
  <li style="position: relative; height: 180px; margin-bottom: 1rem; overflow: hidden;">
    {{#each listing.photos as |photo index|}}
      {{#if (eq index 0)}}
        <img width="95%" src="{{photo}}">
      {{/if}}
    {{else}}
      <div style="color: #666; text-align: center; line-height: 12">no photo</div>
    {{/each}}
