      <span style="float: right">
        {{#if listing.starred}}
          <span {{action 'star' listing}}>{{fa-icon 'fa-star'}}</span>
        {{else}}
          <span {{action 'star' listing}}>{{fa-icon 'fa-star-o'}}</span>
        {{/if}}
        <a style="color: #eee" href="http://www.spareroom.co.uk/flatshare/flatshare_detail.pl?flatshare_id={{listing.id}}" target="_blank">{{fa-icon 'external-link'}}</a>
